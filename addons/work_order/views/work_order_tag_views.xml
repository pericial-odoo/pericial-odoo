<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_work_order_tag_form" model="ir.ui.view">
    <field name="name">view.work.order.tag.form</field>
    <field name="model">work.order.tag</field>
    <field name="arch" type="xml">
      <form string="Tags">
        <header></header>
        <sheet>
          <div class="oe_title">
            <label for="name" class="oe_edit_only"/>
            <h1>
              <field name="name" required="1"/>
            </h1>
            <group name="main">
              <field name="color"/>
            </group>
          </div>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_work_order_tag_tree" model="ir.ui.view">
    <field name="name">view.work.order.tag.tree</field>
    <field name="model">work.order.tag</field>
    <field name="arch" type="xml">
      <tree string="Tags">
        <field name="name"/>
      </tree>
    </field>
  </record>
</odoo>